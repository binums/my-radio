#!/bin/bash
# Quick Reference: Testing Commands for Radio Calico

# Run all tests
npm test

# Run only backend tests
npm run test:backend

# Run only frontend tests
npm run test:frontend

# Run tests in watch mode (auto-rerun on changes)
npm run test:watch

# Run tests with coverage report
npm run test:coverage

# Run tests with verbose output
npm run test:verbose

# Run a specific test file
npx jest tests/backend/ratings.test.js
npx jest tests/frontend/fingerprinting.test.js

# Run tests matching a pattern
npx jest --testNamePattern="rating"

# Update test snapshots (if using snapshots)
npm test -- -u

# Run tests in CI mode (non-interactive)
CI=true npm test

# Debug a specific test
node --inspect-brk node_modules/.bin/jest tests/backend/api.test.js

# Clear Jest cache
npx jest --clearCache
